{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "https://api.littlehope.online/api/:match*"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ],
    "cleanUrls": true
}